<UserControl x:Class="Next_Future_ERP.Core.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="400">

    <UserControl.Resources>
        <!-- Style ضمني للأزرار داخل شريط التنقل -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D89EF"/>
            <Setter Property="BorderBrush" Value="#1B5E9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0078D7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- الأزرار -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5,0">
            <Button x:Name="FirstButton" Content="⏮"
                    Margin="2,0" Click="FirstButton_Click" ToolTip="الأول (Home)"/>
            <Button x:Name="PreviousButton" Content="◀"
                    Margin="2,0" Click="PreviousButton_Click" ToolTip="السابق (←)"/>
            <Button x:Name="NextButton" Content="▶"
                    Margin="2,0" Click="NextButton_Click" ToolTip="التالي (→)"/>
            <Button x:Name="LastButton" Content="⏭"
                    Margin="2,0" Click="LastButton_Click" ToolTip="الأخير (End)"/>
        </StackPanel>

        <!-- معلومات السجل -->
        <TextBlock x:Name="RecordCountText" 
                   Grid.Column="1" 
                   Text="لا توجد سجلات"
                   MinWidth="220"
                   TextAlignment="Center"
                   FontSize="14"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"/>

        <!-- الانتقال المباشر -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0">
            <TextBlock Text="انتقل إلى:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="12"/>
            <TextBox x:Name="GoToTextBox" Width="50" Height="25" 
                     VerticalContentAlignment="Center"
                     KeyDown="GoToTextBox_KeyDown"
                     ToolTip="اكتب رقم السجل واضغط Enter"/>
            <Button x:Name="GoButton" Content="انتقل" 
                    Width="40" Height="25" Margin="2,0"
                    FontSize="10" Click="GoButton_Click"/>
        </StackPanel>
    </Grid>

</UserControl>