<UserControl x:Class="Next_Future_ERP.Core.Controls.CommandBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:controls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             Height="48" MinWidth="320">

    <UserControl.Resources>
        <!-- ÿ≤ÿ± ÿ£ŸäŸÇŸàŸÜÿ© + ŸÜÿµ (ÿ£ÿ≥ÿßÿ≥) -->
        <Style x:Key="CmdIconTextButtonHorizontal" TargetType="{x:Type controls:Button}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="74"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="4,0">
                                <!-- ÿ£ŸäŸÇŸàŸÜÿ© MDL2 ŸÖŸÜ Tag -->
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           FontSize="13"
                                           Text="{TemplateBinding Tag}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <!-- ÿßŸÑŸÜÿµ -->
                                <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary (ŸÜÿ≥ÿ™ÿÆÿØŸÖŸáÿß ŸÑÿ≤ÿ± ÿ≠ŸÅÿ∏/ÿ®ÿ≠ÿ´) -->
        <Style x:Key="CmdPrimaryButton" TargetType="{x:Type controls:Button}" BasedOn="{StaticResource CmdIconTextButtonHorizontal}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="BorderBrush" Value="#1E40AF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="4,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           FontSize="13"
                                           Text="{TemplateBinding Tag}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                                <Setter Property="BorderBrush" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                                <Setter Property="BorderBrush" Value="#1E3A8A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ÿ™ÿÆÿ∑Ÿäÿ∑: ÿπŸÖŸàÿØ ŸÑŸÑÿ®ÿ≠ÿ´ (ŸäŸÖÿ™ÿØ) + ÿπŸÖŸàÿØ ŸÑŸÑÿ£ÿ≤ÿ±ÿßÿ± -->
    <controls:Card Padding="6" BorderThickness="1" HorizontalContentAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- ÿßŸÑÿ®ÿ≠ÿ´ -->
                <ColumnDefinition Width="Auto"/>
                <!-- ÿßŸÑÿ£ÿ≤ÿ±ÿßÿ± -->
            </Grid.ColumnDefinitions>

            <!-- üîé ÿßŸÑÿ®ÿ≠ÿ´ (ÿØÿßÿ¶ŸÖ ŸàŸÖŸÖŸäÿ≤) -->
            <Border Grid.Column="0"
                    CornerRadius="18"
                    Background="White"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    Padding="6,4"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ÿ£ŸäŸÇŸàŸÜÿ© -->
                    <TextBlock Grid.Column="0"
                               FontFamily="Segoe MDL2 Assets"
                               Text="&#xE721;"
                               VerticalAlignment="Center"
                               Margin="8,0"/>

                    <!-- ŸÖÿ±ÿ®ÿπ ÿßŸÑÿ®ÿ≠ÿ´: ŸäŸéÿ±ÿ´ DataContext ‚Üí SearchText ŸÖŸÜ ÿßŸÑŸÄVM -->
                    <TextBox Grid.Column="1"
                             x:Name="SearchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             FontSize="13"
                             Padding="4,0"
                             ToolTip="ÿßŸÉÿ™ÿ® ŸÑŸÑÿ®ÿ≠ÿ´ ÿ´ŸÖ ÿßÿ∂ÿ∫ÿ∑ Enter ÿ£Ÿà ÿ≤ÿ± ÿ®ÿ≠ÿ´">
                        <TextBox.InputBindings>
                            <!-- Enter Ÿäÿ¥ÿ∫ŸëŸÑ SearchCommand ÿßŸÑÿÆÿßÿµ ÿ®ÿßŸÑŸÄUserControl -->
                            <KeyBinding Key="Enter"
                                        Command="{Binding SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Text, ElementName=SearchBox}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- ÿ≤ÿ± ÿ®ÿ≠ÿ´ ÿØÿßÿÆŸÑ ÿßŸÑÿ¥ÿ±Ÿäÿ∑ -->
                    <controls:Button Grid.Column="2"
                                     Style="{StaticResource CmdPrimaryButton}"
                                     Height="20" MinWidth="82"
                                     Tag="&#xE721;"
                                     Command="{Binding SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     CommandParameter="{Binding Text, ElementName=SearchBox}">
                        ÿ®ÿ≠ÿ´
                    </controls:Button>
                </Grid>
            </Border>

            <!-- ÿ£ÿ≤ÿ±ÿßÿ± ÿßŸÑÿ£ŸàÿßŸÖÿ± -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <controls:Button Style="{StaticResource CmdIconTextButtonHorizontal}"
                                 Tag="&#xE710;"
                                 Command="{Binding NewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    ÿ¨ÿØŸäÿØ
                </controls:Button>

                <controls:Button Style="{StaticResource CmdIconTextButtonHorizontal}"
                                 Tag="&#xE70F;"
                                 Command="{Binding EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    ÿ™ÿπÿØŸäŸÑ
                </controls:Button>

                <controls:Button Style="{StaticResource CmdPrimaryButton}"
                                 Tag="&#xE74E;"
                                 Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    ÿ≠ŸÅÿ∏
                </controls:Button>

                <controls:Button Style="{StaticResource CmdIconTextButtonHorizontal}"
                                 Tag="&#xE74D;"
                                 Command="{Binding DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    ÿ≠ÿ∞ŸÅ
                </controls:Button>

                <controls:Button Style="{StaticResource CmdIconTextButtonHorizontal}"
                                 Tag="&#xE72C;"
                                 Command="{Binding RefreshCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    ÿ™ÿ≠ÿØŸäÿ´
                </controls:Button>
            </StackPanel>
        </Grid>
    </controls:Card>
</UserControl>
