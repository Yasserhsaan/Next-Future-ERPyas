<Application x:Class="Next_Future_ERP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:Next_Future_ERP.Converters"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:BooleanToBackgroundConverter x:Key="BooleanToBackgroundConverter" />
            <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#FFF8F9FB" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
