<Page x:Class="Next_Future_ERP.Features.PrintManagement.Views.TemplateWorkspaceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:commonConverters="clr-namespace:Next_Future_ERP.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="مساحة عمل القالب"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <!-- محول الرؤية المضمّن -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- ألوان مخصصة -->
        <SolidColorBrush x:Key="AccentBrush" Color="#2563eb"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10b981"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#f59e0b"/>

        <!-- أنماط الأزرار -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1d4ed8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1e40af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- نمط النصوص -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- نمط العناوين -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#1f2937"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Content Tabs -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource CardBorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding CurrentTemplate.Name, StringFormat='مساحة عمل: {0}'}" 
                               Style="{StaticResource SectionHeader}"
                               FontSize="20"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="النوع:" Style="{StaticResource FormLabel}" Margin="0,0,8,0"/>
                        <!-- استخدام DocumentTypeId لضمان التوافق -->
                        <TextBlock Text="{Binding CurrentTemplate.DocumentTypeId}" 
                                   Style="{StaticResource FormLabel}" Margin="0,0,16,0"/>
                        <TextBlock Text="المحرك:" Style="{StaticResource FormLabel}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding CurrentTemplate.Engine}" 
                                   Style="{StaticResource FormLabel}" Margin="0,0,16,0"/>
                        <TextBlock Text="الإصدار الحالي:" Style="{StaticResource FormLabel}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding CurrentVersion.VersionNo}" 
                                   Style="{StaticResource FormLabel}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- حفظ التصميم الحالي -->
                    <Button Content="حفظ" Style="{StaticResource IconButton}" Background="{StaticResource SuccessBrush}"
                            Click="SaveButton_Click"/>
                    <Button Content="معاينة" Style="{StaticResource IconButton}" Background="{StaticResource WarningBrush}" Command="{Binding PreviewTemplateAsyncCommand}"/>
                    <Button Content="معاينة مع بيانات" Style="{StaticResource IconButton}" Background="#8b5cf6" Command="{Binding PreviewWithSampleDataAsyncCommand}"/>
                    <Button Content="التحقق" Style="{StaticResource IconButton}" Background="#06b6d4" Command="{Binding ValidateTemplateAsyncCommand}"/>
                    <Button Content="طباعة" Style="{StaticResource IconButton}" Background="#f59e0b" Command="{Binding PrintTemplateAsyncCommand}"/>
                    <Button Content="إغلاق" Style="{StaticResource IconButton}" Background="#6b7280" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource CardBorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="20,12">
            <StackPanel Orientation="Horizontal">
                <Button Content="إصدار جديد" Style="{StaticResource IconButton}" Command="{Binding CreateNewVersionAsyncCommand}"/>
                <Button Content="تفعيل الإصدار" Style="{StaticResource IconButton}" Background="{StaticResource SuccessBrush}" Command="{Binding ActivateVersionAsyncCommand}"/>

                <Rectangle Width="1" Height="24" Fill="{StaticResource CardBorderBrush}" Margin="12,0"/>

                <Button Content="إضافة مصدر بيانات" Style="{StaticResource IconButton}" Background="#f59e0b" Click="AddDataSourceButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Content Tabs -->
        <TabControl Grid.Row="2" SelectedIndex="{Binding SelectedTabIndex}" 
                    Background="White" BorderBrush="{StaticResource CardBorderBrush}">

            <!-- Overview Tab -->
            <TabItem Header="نظرة عامة" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Versions List -->
                    <GroupBox Grid.Column="0" Header="الإصدارات" FontWeight="Bold" Margin="0,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <Button Content="إصدار جديد" Style="{StaticResource IconButton}" Command="{Binding CreateNewVersionAsyncCommand}"/>
                                <Button Content="تفعيل" Style="{StaticResource IconButton}" Background="{StaticResource SuccessBrush}" Command="{Binding ActivateVersionAsyncCommand}"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding Versions}"
                                      SelectedItem="{Binding SelectedVersion}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="رقم الإصدار" Binding="{Binding VersionNo}" Width="80"/>
                                    <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="80"/>
                                    <DataGridTextColumn Header="تاريخ الإنشاء" Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy/MM/dd}'}" Width="100"/>
                                    <DataGridTextColumn Header="المحتويات" Binding="{Binding ContentCount}" Width="80"/>
                                    <DataGridTextColumn Header="مصادر البيانات" Binding="{Binding DataSourceCount}" Width="100"/>
                                    <DataGridTextColumn Header="الملاحظات" Binding="{Binding Notes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>

                    <!-- Quick Stats -->
                    <GroupBox Grid.Column="2" Header="إحصائيات سريعة" FontWeight="Bold">
                        <StackPanel>
                            <Border Background="#f3f4f6" Padding="12" Margin="0,0,0,8" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="إجمالي الإصدارات" Style="{StaticResource FormLabel}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Versions.Count}" FontWeight="Bold" FontSize="16"/>
                                </Grid>
                            </Border>

                            <Border Background="#ecfdf5" Padding="12" Margin="0,0,0,8" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الإصدار النشط" Style="{StaticResource FormLabel}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentVersion.VersionNo}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource SuccessBrush}"/>
                                </Grid>
                            </Border>

                            <Border Background="#fef3c7" Padding="12" Margin="0,0,0,8" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="المحتويات" Style="{StaticResource FormLabel}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Contents.Count}" FontWeight="Bold" FontSize="16"/>
                                </Grid>
                            </Border>

                            <Border Background="#dbeafe" Padding="12" CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="مصادر البيانات" Style="{StaticResource FormLabel}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DataSources.Count}" FontWeight="Bold" FontSize="16"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Content Tab -->
            <TabItem Header="المحتوى" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Content Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="حفظ" Style="{StaticResource IconButton}" Click="SaveButton_Click"/>
                        <Button Content="حذف" Style="{StaticResource IconButton}" Background="{StaticResource ErrorBrush}" Command="{Binding DeleteContentAsyncCommand}"/>
                    </StackPanel>

                    <TabControl Grid.Row="1">
                        <TabItem Header="المحرر" FontSize="13">
                            <wv2:WebView2 x:Name="EditorWebView" NavigationCompleted="EditorWebView_NavigationCompleted"/>
                        </TabItem>
                        <TabItem Header="المحتويات" FontSize="13">
                            <DataGrid ItemsSource="{Binding Contents}"
                                      SelectedItem="{Binding SelectedContent}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="النوع" Binding="{Binding ContentType}" Width="100"/>
                                    <DataGridTextColumn Header="الحجم" Binding="{Binding ContentText.Length, StringFormat='{}{0} حرف'}" Width="120"/>
                                    <DataGridTextColumn Header="البصمة" Binding="{Binding ContentHash}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!-- Data Sources Tab -->
            <TabItem Header="مصادر البيانات" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Data Source -->
                    <GroupBox Grid.Row="0" Header="إضافة مصدر بيانات" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="الاسم:" Style="{StaticResource FormLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding NewDataSourceName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Grid.Column="3" Text="النوع:" Style="{StaticResource FormLabel}"/>
                            <ComboBox Grid.Column="4" SelectedValue="{Binding NewDataSourceType}" SelectedValuePath="Tag">
                                <ComboBoxItem Content="View" Tag="view"/>
                                <ComboBoxItem Content="Procedure" Tag="proc"/>
                            </ComboBox>

                            <TextBlock Grid.Column="6" Text="المسار:" Style="{StaticResource FormLabel}"/>
                            <TextBox Grid.Column="7" Text="{Binding NewDataSourcePath, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Grid.Column="9" Content="إضافة" Style="{StaticResource IconButton}" Command="{Binding AddDataSourceAsyncCommand}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Data Sources Toolbar -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="تعيين رئيسي" Style="{StaticResource IconButton}" Background="{StaticResource SuccessBrush}" Command="{Binding SetMainDataSourceAsyncCommand}"/>
                        <Button Content="اختبار" Style="{StaticResource IconButton}" Background="{StaticResource WarningBrush}" Click="TestDataSourceButton_Click"/>
                        <Button Content="حذف" Style="{StaticResource IconButton}" Background="{StaticResource ErrorBrush}" Click="DeleteDataSourceButton_Click"/>
                    </StackPanel>

                    <!-- Data Sources List -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding DataSources}"
                              SelectedItem="{Binding SelectedDataSource}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="120"/>
                            <DataGridTextColumn Header="النوع" Binding="{Binding SourceType}" Width="80"/>
                            <DataGridTextColumn Header="المسار" Binding="{Binding SourceName}" Width="200"/>

                            <!-- رئيسي: بدون Converter -->
                            <DataGridTemplateColumn Header="رئيسي" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#ef4444"/>
                                                    <!-- لا -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMain}" Value="True">
                                                            <Setter Property="Background" Value="#10b981"/>
                                                            <!-- نعم -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Foreground="White" FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="لا"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMain}" Value="True">
                                                                <Setter Property="Text" Value="نعم"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- الحالة: بدون Converter -->
                            <DataGridTemplateColumn Header="الحالة" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#ef4444"/>
                                                    <!-- فشل -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TestPassed}" Value="True">
                                                            <Setter Property="Background" Value="#10b981"/>
                                                            <!-- نجح -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Foreground="White" FontSize="11" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="لا"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TestPassed}" Value="True">
                                                                <Setter Property="Text" Value="نعم"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="المهلة (ثانية)" Binding="{Binding TimeoutSec}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Preview Tab -->
            <TabItem Header="المعاينة" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="معرف المستند:" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Column="1" Text="123456"/>

                        <TextBlock Grid.Column="3" Text="تنسيق الإخراج:" Style="{StaticResource FormLabel}"/>
                        <ComboBox Grid.Column="4">
                            <ComboBoxItem Content="HTML" Tag="HTML"/>
                            <ComboBoxItem Content="PDF" Tag="PDF"/>
                            <ComboBoxItem Content="PNG" Tag="PNG"/>
                        </ComboBox>

                        <Button Grid.Column="6" Content="معاينة" Style="{StaticResource IconButton}" Background="{StaticResource SuccessBrush}" Command="{Binding PreviewTemplateAsyncCommand}"/>
                    </Grid>

                    <!-- Preview Area -->
                    <Border Grid.Row="1" BorderBrush="{StaticResource CardBorderBrush}" BorderThickness="1" Background="White">
                        <ScrollViewer>
                            <WebBrowser Name="PreviewBrowser" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#f3f4f6" 
                BorderBrush="{StaticResource CardBorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="20,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           Style="{StaticResource FormLabel}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentTemplate.Engine, StringFormat='المحرك: {0}'}" 
                               Style="{StaticResource FormLabel}" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding CurrentVersion.Status, StringFormat='الحالة: {0}'}" 
                               Style="{StaticResource FormLabel}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="4" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="8" Padding="32" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Height="4" Margin="0,0,0,16"/>
                    <TextBlock Text="جاري التحميل..." HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>