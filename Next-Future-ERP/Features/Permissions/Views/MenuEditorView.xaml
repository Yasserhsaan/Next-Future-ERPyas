<Page x:Class="Next_Future_ERP.Features.Permissions.Views.MenuEditorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewmodels="clr-namespace:Next_Future_ERP.Features.Permissions.ViewModels"
      xmlns:converters="clr-namespace:Next_Future_ERP.Features.Permissions.Converters"
      Title="محرر القوائم"
      FlowDirection="RightToLeft"
      Background="#F8F9FA">

    <Page.Resources>
        <!-- ===== Converters ===== -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- ===== Card Style ===== -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" BlurRadius="5" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Button Styles ===== -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Loading Overlay Style ===== -->
        <Style x:Key="LoadingOverlayStyle" TargetType="Border">
            <Setter Property="Background" Value="#80FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Loading Text Style ===== -->
        <Style x:Key="LoadingTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Loading Message -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="محرر القوائم" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding LoadingMessage}" 
                       Style="{StaticResource LoadingTextStyle}"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"
                       Visibility="{Binding LoadingMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="تحميل القوائم" 
                    Command="{Binding LoadMenuFormsCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            <Button Content="إضافة جديد" 
                    Command="{Binding StartAddingNewCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            <Button Content="تحرير" 
                    Command="{Binding EditMenuFormCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            <Button Content="حذف" 
                    Command="{Binding DeleteMenuFormCommand}"
                    Style="{StaticResource ActionButtonStyle}"
                    Background="#DC3545"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Forms List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="قائمة القوائم" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                    
                    <!-- Search Box -->
                    <TextBox Grid.Row="1" 
                             Text="{Binding SearchText}" 
                             Padding="8,4" 
                             Margin="0,0,0,8"
                             Background="White"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Menu Forms DataGrid -->
                    <Grid Grid.Row="2">
                        <DataGrid ItemsSource="{Binding MenuForms}"
                                  SelectedItem="{Binding SelectedMenuForm}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  RowHeaderWidth="0"
                                  Background="White"
                                  BorderBrush="#E0E0E0"
                                  BorderThickness="1"
                                  HorizontalGridLinesBrush="#F0F0F0"
                                  VerticalGridLinesBrush="Transparent"
                                  RowBackground="White"
                                  AlternatingRowBackground="#FAFAFA"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  FontSize="12"
                                  Visibility="{Binding IsLoadingMenuForms, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="الكود" Binding="{Binding MenuFormCode}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="الاسم الإنجليزي" Binding="{Binding MenuName}" Width="150"/>
                                <DataGridTextColumn Header="الاسم العربي" Binding="{Binding MenuArabicName}" Width="150"/>
                                <DataGridTextColumn Header="القائمة الأب" Binding="{Binding MenuFormParent}" Width="100"/>
                                <DataGridTextColumn Header="المسار" Binding="{Binding ProgramExecutable}" Width="200"/>
                                <DataGridCheckBoxColumn Header="مرئي" Binding="{Binding Visible}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Loading Overlay for Menu Forms -->
                        <Border Style="{StaticResource LoadingOverlayStyle}"
                                Visibility="{Binding IsLoadingMenuForms, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <ProgressBar IsIndeterminate="True" Width="150" Height="4" 
                                             Background="#E0E0E0" Foreground="#007ACC"/>
                                <TextBlock Text="تحميل القوائم..." Style="{StaticResource LoadingTextStyle}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Menu Form Editor -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" 
                    Visibility="{Binding IsAddingNew, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <StackPanel IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <TextBlock Text="تحرير القائمة" FontSize="14" FontWeight="Bold" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="الاسم الإنجليزي:" Margin="0,0,0,4"/>
                            <TextBox Grid.Row="1" Text="{Binding NewMenuForm.MenuName}" Padding="8,4" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="2" Text="الاسم العربي:" Margin="0,0,0,4"/>
                            <TextBox Grid.Row="3" Text="{Binding NewMenuForm.MenuArabicName}" Padding="8,4" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="4" Text="القائمة الأب:" Margin="0,0,0,4"/>
                            <ComboBox Grid.Row="5" 
                                      ItemsSource="{Binding ParentMenuForms}"
                                      SelectedValue="{Binding NewMenuForm.MenuFormParent}"
                                      SelectedValuePath="MenuFormCode"
                                      DisplayMemberPath="DisplayName"
                                      Padding="8,4" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="6" Text="مسار التطبيق:" Margin="0,0,0,4"/>
                            <TextBox Grid.Row="7" Text="{Binding NewMenuForm.ProgramExecutable}" Padding="8,4" Margin="0,0,0,16"/>

                            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="حفظ" 
                                        Command="{Binding SaveMenuFormCommand}"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="إلغاء" 
                                        Command="{Binding CancelAddingCommand}"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="#6C757D"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Saving Overlay -->
                    <Border Style="{StaticResource LoadingOverlayStyle}"
                            Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <ProgressBar IsIndeterminate="True" Width="100" Height="4" 
                                         Background="#E0E0E0" Foreground="#007ACC"/>
                            <TextBlock Text="جاري الحفظ..." Style="{StaticResource LoadingTextStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Global Loading Overlay -->
        <Border Grid.RowSpan="4" 
                Style="{StaticResource LoadingOverlayStyle}"
                Background="#90FFFFFF"
                Visibility="{Binding IsDeleting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <ProgressBar IsIndeterminate="True" Width="150" Height="6" 
                             Background="#E0E0E0" Foreground="#DC3545"/>
                <TextBlock Text="جاري الحذف..." Style="{StaticResource LoadingTextStyle}" Foreground="#DC3545"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
