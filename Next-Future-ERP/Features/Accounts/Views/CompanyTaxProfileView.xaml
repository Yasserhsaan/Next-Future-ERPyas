<Page x:Class="Next_Future_ERP.Features.Accounts.Views.CompanyTaxProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      FlowDirection="RightToLeft"
      Background="{DynamicResource ApplicationBackgroundBrush}">

    <!-- Resources: نفس ثيم السندات -->
    <Page.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF34A7A9"/>
        <SolidColorBrush x:Key="AccentTextBrush" Color="#000000"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF"/>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="RightAlignedText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="RightAlignedTextBox" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{StaticResource CardBackgroundBrush}"
                                CornerRadius="10">
                            <DockPanel>
                                <Border Background="{StaticResource AccentBrush}"
                                        CornerRadius="10,10,0,0"
                                        Padding="10,6"
                                        DockPanel.Dock="Top">
                                    <TextBlock Text="{TemplateBinding Header}"
                                               Foreground="{StaticResource AccentTextBrush}"
                                               FontWeight="SemiBold"/>
                                </Border>
                                <ContentPresenter Margin="10"/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Expander">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AlternationCount" Value="2"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFF7F7F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- Layout -->
    <Grid Margin="16" KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="Auto"/>
            <!-- Results -->
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- filler -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" FlowDirection="LeftToRight" Margin="0,0,0,8">
            <Button Style="{StaticResource IconButton}" Command="{Binding NewAsyncCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,6,0"/>
                    <TextBlock Text="جديد"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource IconButton}" Command="{Binding SaveAsyncCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" Margin="0,0,6,0"/>
                    <TextBlock Text="حفظ"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource IconButton}" Command="{Binding DeleteAsyncCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" Margin="0,0,6,0"/>
                    <TextBlock Text="حذف"/>
                </StackPanel>
            </Button>
            <Separator/>
            <TextBlock VerticalAlignment="Center" Margin="8,0,0,0"
                       Text="{Binding Profile.ProfileId, StringFormat=رقم الملف: {0}}"/>
        </ToolBar>

        <!-- Search -->
        <Expander Grid.Row="1" Header="بحث / استعراض" IsExpanded="{Binding IsSearchPanelExpanded, Mode=TwoWay}">
            <GroupBox Header="">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Company + Branch -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <!-- VAT + TaxOffice -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Activity + Dates -->
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <!-- Actions -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource FormLabel}" Text="الشركة"/>
                    <ComboBox Grid.Row="0" Grid.Column="2"
                              ItemsSource="{Binding CompanyOptions}"
                              SelectedValue="{Binding SearchCompanyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValuePath="CompanyId" DisplayMemberPath="CompanyName"
                              MinWidth="220"
                              SelectionChanged="SearchCompanyCombo_SelectionChanged"/>

                    <TextBlock Grid.Row="0" Grid.Column="4" Style="{StaticResource FormLabel}" Text="الفرع"/>
                    <ComboBox Grid.Row="0" Grid.Column="6"
                              ItemsSource="{Binding SearchBranchOptions}"
                              SelectedValue="{Binding SearchBranchId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValuePath="BranchId" DisplayMemberPath="BranchName"
                              MinWidth="220"/>

                    <TextBlock Grid.Row="2" Style="{StaticResource FormLabel}" Text="الرقم الضريبي (VAT)"/>
                    <TextBox   Grid.Row="2" Grid.Column="2"
                               Text="{Binding SearchVAT, UpdateSourceTrigger=PropertyChanged}" MinWidth="200"/>

                    <TextBlock Grid.Row="2" Grid.Column="4" Style="{StaticResource FormLabel}" Text="مكتب الضرائب"/>
                    <TextBox   Grid.Row="2" Grid.Column="6"
                               Text="{Binding SearchTaxOffice, UpdateSourceTrigger=PropertyChanged}" MinWidth="200"/>

                    <TextBlock Grid.Row="4" Style="{StaticResource FormLabel}" Text="رمز النشاط"/>
                    <TextBox   Grid.Row="4" Grid.Column="2"
                               Text="{Binding SearchActivityCode, UpdateSourceTrigger=PropertyChanged}" MinWidth="200"/>

                    <TextBlock Grid.Row="4" Grid.Column="4" Style="{StaticResource FormLabel}" Text="من (تاريخ الإنشاء)"/>
                    <StackPanel Grid.Row="4" Grid.Column="6" Orientation="Horizontal">
                        <DatePicker SelectedDate="{Binding SearchFrom}" Width="140"/>
                        <TextBlock Text="إلى" Margin="8,0,8,0" VerticalAlignment="Center"/>
                        <DatePicker SelectedDate="{Binding SearchTo}" Width="140"/>
                    </StackPanel>

                    <WrapPanel Grid.Row="6" Grid.ColumnSpan="7">
                        <Button Content="بحث" Command="{Binding SearchAsyncCommand}"/>
                        <Button Content="تصفير" Margin="6,0,0,0" Command="{Binding ResetSearchCommand}"/>
                        <TextBlock Margin="16,0,0,0" VerticalAlignment="Center" Text="{Binding ResultCountText}"/>
                        <Button Content="السابق" Margin="16,0,0,0" Command="{Binding PrevPageAsyncCommand}" IsEnabled="{Binding HasPrev}"/>
                        <Button Content="التالي"  Margin="6,0,0,0"  Command="{Binding NextPageAsyncCommand}" IsEnabled="{Binding HasNext}"/>
                    </WrapPanel>
                </Grid>
            </GroupBox>
        </Expander>

        <!-- Results -->
        <Expander Grid.Row="2" Header="نتائج البحث" IsExpanded="{Binding IsResultsPanelExpanded, Mode=TwoWay}">
            <DataGrid Margin="0,8,0,8"
                      ItemsSource="{Binding SearchResults}"
                      SelectedItem="{Binding SelectedLookup, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Height="260">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="رقم" Binding="{Binding ProfileId}" Width="70"/>
                    <DataGridTextColumn Header="الشركة" Binding="{Binding CompanyName}" Width="*"/>
                    <DataGridTextColumn Header="الفرع" Binding="{Binding BranchName}" Width="*"/>
                    <DataGridTextColumn Header="VAT" Binding="{Binding VATRegistrationNumber}" Width="160"/>
                    <DataGridTextColumn Header="VAT الفرع" Binding="{Binding BranchVATNumber}" Width="140"/>
                    <DataGridTextColumn Header="مكتب الضرائب" Binding="{Binding TaxOffice}" Width="*"/>
                    <DataGridTextColumn Header="نوع المكلف" Binding="{Binding TaxpayerType}" Width="120"/>
                    <DataGridTextColumn Header="رمز النشاط" Binding="{Binding ActivityCode}" Width="120"/>
                    <DataGridTextColumn Header="أُنشئ" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="120"/>
                    <DataGridTextColumn Header="تحديث" Binding="{Binding UpdatedAt, StringFormat=yyyy-MM-dd}" Width="120"/>
                    <DataGridTemplateColumn Header="" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="فتح" Margin="0,0,6,0"
                                            Command="{Binding DataContext.OpenSelectedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="تحرير"
                                            Command="{Binding DataContext.EditSelectedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Expander>

        <!-- Header/Main -->
        <GroupBox Grid.Row="3" Header="بيانات الملف الضريبي" Margin="0,0,0,8">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource FormLabel}" Text="الشركة"/>
                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding CompanyOptions}"
                          SelectedValue="{Binding Profile.CompanyId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="CompanyId" DisplayMemberPath="CompanyName"
                          MinWidth="240"
                          IsEnabled="{Binding IsHeaderEnabled}"
                          SelectionChanged="CompanyCombo_SelectionChanged"/>

                <TextBlock Grid.Column="4" Style="{StaticResource FormLabel}" Text="الفرع"/>
                <ComboBox Grid.Column="6"
                          ItemsSource="{Binding BranchOptions}"
                          SelectedValue="{Binding Profile.BranchId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="BranchId" DisplayMemberPath="BranchName"
                          MinWidth="240"
                          IsEnabled="{Binding IsHeaderEnabled}"/>

                <TextBlock Grid.Row="2" Style="{StaticResource FormLabel}" Text="الرقم الضريبي (VAT)"/>
                <TextBox Grid.Row="2" Grid.Column="2"
                         Text="{Binding Profile.VATRegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="30"
                         IsEnabled="{Binding IsHeaderEnabled}"/>

                <TextBlock Grid.Row="2" Grid.Column="4" Style="{StaticResource FormLabel}" Text="VAT الفرع"/>
                <TextBox Grid.Row="2" Grid.Column="6"
                         Text="{Binding Profile.BranchVATNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="30"
                         IsEnabled="{Binding IsHeaderEnabled}"/>

                <TextBlock Grid.Row="4" Style="{StaticResource FormLabel}" Text="مكتب الضرائب"/>
                <TextBox Grid.Row="4" Grid.Column="2"
                         Text="{Binding Profile.TaxOffice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="100"
                         IsEnabled="{Binding IsHeaderEnabled}"/>

                <TextBlock Grid.Row="4" Grid.Column="4" Style="{StaticResource FormLabel}" Text="نوع المكلف"/>
                <ComboBox Grid.Row="4" Grid.Column="6"
                          MinWidth="200"
                          SelectedValue="{Binding Profile.TaxpayerType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding IsHeaderEnabled}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:Byte}">
                            <sys:Byte>0</sys:Byte>
                            <sys:Byte>1</sys:Byte>
                            <sys:Byte>2</sys:Byte>
                            <sys:Byte>3</sys:Byte>
                            <sys:Byte>4</sys:Byte>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>

                <TextBlock Grid.Row="6" Style="{StaticResource FormLabel}" Text="رمز النشاط"/>
                <TextBox Grid.Row="6" Grid.Column="2"
                         Text="{Binding Profile.ActivityCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="20"
                         IsEnabled="{Binding IsHeaderEnabled}"/>

                <TextBlock Grid.Row="6" Grid.Column="4" Style="{StaticResource FormLabel}" Text="شهادة التسجيل الضريبي"/>
                <StackPanel Grid.Row="6" Grid.Column="6" Orientation="Horizontal">
                    <Button Content="إرفاق ملف…" Command="{Binding PickCertificateCommand}" IsEnabled="{Binding IsHeaderEnabled}"/>
                    <Button Content="إزالة" Margin="6,0,0,0" Command="{Binding ClearCertificateCommand}" IsEnabled="{Binding IsHeaderEnabled}"/>
                    <TextBlock Text="{Binding CertificateStatusText}" Margin="10,0,0,0" VerticalAlignment="Center"
                               ToolTip="{Binding CertificateTooltip}"/>
                </StackPanel>

                <TextBlock Grid.Row="8" Style="{StaticResource FormLabel}" Text="أُنشئ"/>
                <TextBlock Grid.Row="8" Grid.Column="2" Text="{Binding Profile.CreatedAt, StringFormat=yyyy-MM-dd HH:mm}"/>
                <TextBlock Grid.Row="8" Grid.Column="4" Style="{StaticResource FormLabel}" Text="آخر تحديث"/>
                <TextBlock Grid.Row="8" Grid.Column="6" Text="{Binding Profile.UpdatedAt, StringFormat=yyyy-MM-dd HH:mm}"/>
            </Grid>
        </GroupBox>

        <!-- Status -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding Profile.ProfileId, StringFormat=الملف: {0}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedCompanyName, StringFormat=الشركة: {0}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedBranchName, StringFormat=الفرع: {0}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding Profile.VATRegistrationNumber, StringFormat=VAT: {0}}"/>
            </StatusBarItem>
            <StatusBarItem>
                <CheckBox Content="مفعّل للتحرير" IsChecked="{Binding IsHeaderEnabled, Mode=TwoWay}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
