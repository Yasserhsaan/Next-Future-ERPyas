<Page
    x:Class="Next_Future_ERP.Features.Accounts.Views.AccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Next_Future_ERP.Features.Accounts.ViewModels"
    xmlns:local="clr-namespace:Next_Future_ERP.Converters"
    mc:Ignorable="d"
    Title="شجرة الحسابات"
    Background="#F4F6F8">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <!-- تبويب بسيط أنيق -->
        <Style TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <UniformGrid Grid.Row="0" IsItemsHost="True" Rows="1" Background="White"/>
                            <ContentPresenter Grid.Row="1" ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0 0 0 2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" Margin="10,4">
                                <TextBlock Text="⭐" FontSize="12" Foreground="#2196F3"
                                           Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center" Margin="5,0,5,0"/>
                                <Button Content="×" Width="18" Height="18" FontSize="11" Padding="0"
                                        Background="Transparent" BorderThickness="0" Foreground="Gray"
                                        Cursor="Hand" Click="CloseTab_Click"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="#0D47A1"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- يظل الـ DataContext كما هو لتمكين الإنشاء من XAML (VM له منشئ افتراضي عام) -->
    <Page.DataContext>
        <viewmodels:AccountsViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- شريط علوي: بحث + أزرار Excel -->
            <RowDefinition Height="*"/>
            <!-- الشجرة -->
            <RowDefinition Height="Auto"/>
            <!-- الأزرار السفلية (إضافة/تعديل/حذف) -->
        </Grid.RowDefinitions>

        <!-- الشريط العلوي -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,10">
            <!-- أزرار Excel على اليسار -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" HorizontalAlignment="Left" Margin="0,0,10,0">
                <Button Content="⬇️ تنزيل نموذج الدليل (Excel)"
                        Padding="10,6"
                        Margin="0,0,8,0"
                        Command="{Binding DownloadCoaTemplateCommand}"/>
                <Button Content="⬆️ رفع الدليل من Excel"
                        Padding="10,6"
                        Command="{Binding ImportCoaFromExcelCommand}"/>
            </StackPanel>

            <!-- مربع البحث على اليمين -->
            <Grid Width="280" Height="32" HorizontalAlignment="Right">
                <Border Background="White" CornerRadius="6" BorderBrush="#DDD" BorderThickness="1"/>
                <TextBox x:Name="SearchTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Margin="6,2,6,2"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         VerticalContentAlignment="Center"/>
                <TextBlock Text="ادخل اسم الحساب"
                           Foreground="Gray"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
            </Grid>
        </DockPanel>

        <!-- الشجرة ضمن تبويبات الجذور -->
        <TabControl Grid.Row="1"
                    ItemsSource="{Binding RootAccounts}"
                    SelectedItem="{Binding SelectedTabAccount, Mode=TwoWay}"
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="8">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding AccountNameAr}" FontWeight="Bold"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10" Background="White">
                        <ScrollViewer>
                            <TreeView ItemsSource="{Binding Children}" SelectedItemChanged="TreeView_SelectedItemChanged">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <TextBlock Text="{Binding AccountNameAr}"/>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </ScrollViewer>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- الأزرار السفلية -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="➕ إضافة"
                    Command="{Binding AddSubAccountCommand}"
                    IsEnabled="{Binding SelectedAccount, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="✏️ تعديل"
                    Margin="5,0"
                    Command="{Binding EditAccountCommand}"
                    IsEnabled="{Binding SelectedAccount, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="🗑️ حذف"
                    Margin="5,0"
                    Command="{Binding DeleteAccountCommand}"
                    IsEnabled="{Binding SelectedAccount, Converter={StaticResource NullToBoolConverter}}"/>
        </StackPanel>
    </Grid>
</Page>
