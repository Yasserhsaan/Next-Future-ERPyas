<Page
    x:Class="Next_Future_ERP.Features.Accounts.Views.GeneralJournalEntryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:Next_Future_ERP.Features.Accounts.ViewModels"
    xmlns:converters="clr-namespace:Next_Future_ERP.Converters"
    mc:Ignorable="d"
    Title="قيد يومية عامة"
    FlowDirection="RightToLeft"
    Background="#F9F9F9"
    d:DataContext="{d:DesignInstance Type=viewmodels:GeneralJournalEntryViewModel, IsDesignTimeCreatable=True}">

    <Page.DataContext>
        <viewmodels:GeneralJournalEntryViewModel />
    </Page.DataContext>

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:IsNotTotalRowConverter x:Key="IsNotTotalRowConverter"/>

        <Style x:Key="RequiredFieldIndicator" TargetType="TextBlock">
            <Setter Property="Text" Value="*"/>
            <Setter Property="Foreground" Value="#FF5F57"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
        </Style>

        <Style x:Key="ModernTabButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsPressed}" Value="True">
                    <Setter Property="Background" Value="#1E90FF"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- عنوان الصفحة -->
        <ui:TextBlock Text="قيد يومية عامة" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- مفتاح تفسيري -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <ui:TextBlock Text="* " Foreground="Red" FontWeight="Bold"/>
                <ui:TextBlock Text="= حقل إجباري" Foreground="Black"/>
            </StackPanel>
        </StackPanel>

        <!-- أزرار التنقل بين الأقسام -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
            <ui:Button Content="معلومات القيد" 
                       Command="{Binding ShowHeaderTabCommand}"
                       Margin="0,0,5,0"
                       Background="{Binding ShowHeader, Converter={StaticResource BooleanToBackgroundConverter}, ConverterParameter=Active}">
                <ui:Button.Style>
                    <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                        <Setter Property="Background" Value="Gray"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowHeader}" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Button.Style>
            </ui:Button>
            <ui:Button Content="تفاصيل القيد" 
                       Command="{Binding ShowDetailsTabCommand}"
                       Margin="0,0,5,0"
                       Background="{Binding ShowDetails, Converter={StaticResource BooleanToBackgroundConverter}, ConverterParameter=Active}">
                <ui:Button.Style>
                    <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                        <Setter Property="Background" Value="Gray"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowDetails}" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Button.Style>
            </ui:Button>
            <ui:Button Content="ملخص القيد" 
                       Command="{Binding ShowSummaryTabCommand}"
                       Background="{Binding ShowSummary, Converter={StaticResource BooleanToBackgroundConverter}, ConverterParameter=Active}">
                <ui:Button.Style>
                    <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                        <Setter Property="Background" Value="Gray"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowSummary}" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Button.Style>
            </ui:Button>
        </StackPanel>

        <!-- منطقة المحتوى -->
        <ui:Card Grid.Row="3" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- معلومات القيد -->
                    <StackPanel Visibility="{Binding ShowHeader, Converter={StaticResource BoolToVisibility}}">
                        <ui:TextBlock Text="معلومات القيد" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- رقم المستند -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <ui:TextBlock Text="رقم المستند:" VerticalAlignment="Center"/>
                                <ui:TextBlock Style="{StaticResource RequiredFieldIndicator}"/>
                            </StackPanel>
                            <ui:TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.DocumentNumber, TargetNullValue='', FallbackValue=''}"/>

                            <!-- نوع المستند -->
                            <ui:TextBlock Text="نوع المستند:" Grid.Row="0" Grid.Column="2" Margin="0,0,0,5"/>
                            <ComboBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,10"
                                         ItemsSource="{Binding DocumentTypes}"
                                         SelectedValue="{Binding JournalEntry.DocumentTypeId}"
                                         DisplayMemberPath="DocumentNameAr"
                                         SelectedValuePath="DocumentTypeId" />

                            <!-- تاريخ الترحيل -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <ui:TextBlock Text="تاريخ الترحيل:" VerticalAlignment="Center"/>
                                <ui:TextBlock Style="{StaticResource RequiredFieldIndicator}"/>
                            </StackPanel>
                            <DatePicker Grid.Row="3" Grid.Column="0" Margin="0,0,0,10"
                                           SelectedDate="{Binding JournalEntry.PostingDate}"/>

                            <!-- رقم المرجع -->
                            <ui:TextBlock Text="رقم المرجع:" Grid.Row="2" Grid.Column="2" Margin="0,0,0,5"/>
                            <ui:TextBox Grid.Row="3" Grid.Column="2" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.ReferenceNumber, TargetNullValue='', FallbackValue=''}"/>

                            <!-- الوصف -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,5">
                                <ui:TextBlock Text="الوصف:" VerticalAlignment="Center"/>
                                <ui:TextBlock Style="{StaticResource RequiredFieldIndicator}"/>
                            </StackPanel>
                            <ui:TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.Description, TargetNullValue='', FallbackValue=''}"
                                        Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <!-- الحالة -->
                            <ui:TextBlock Text="الحالة:" Grid.Row="6" Grid.Column="0" Margin="0,0,0,5"/>
                            <ComboBox Grid.Row="7" Grid.Column="0" Margin="0,0,0,10"
                                         ItemsSource="{Binding StatusOptions}"
                                         SelectedValue="{Binding JournalEntry.Status}"
                                         SelectedValuePath="Key"
                                         DisplayMemberPath="Value" />
                        </Grid>
                    </StackPanel>

                    <!-- تفاصيل القيد -->
                    <StackPanel Visibility="{Binding ShowDetails, Converter={StaticResource BoolToVisibility}}">
                        <ui:TextBlock Text="تفاصيل القيد" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>

                        <!-- أزرار التحكم في التفاصيل -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:Button Content="إضافة تفصيل" Command="{Binding AddDetailCommand}" 
                                       Background="#28a745" Foreground="White"/>
                            <ui:Button Content="حذف تفصيل" Command="{Binding RemoveDetailCommand}" 
                                       Background="#dc3545" Foreground="White" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- DataGrid لتفاصيل القيد -->
                        <DataGrid ItemsSource="{Binding Details}" 
          SelectedItem="{Binding SelectedDetail}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          Height="300"
          Margin="0,0,0,10"
          HeadersVisibility="Column"
          IsReadOnly="False"
          AlternatingRowBackground="#f2f2f2">

                            <!-- الأعمدة -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="رقم الحساب" Binding="{Binding AccountNumber}" Width="*"/>
                                <DataGridTextColumn Header="مركز التكلفة" Binding="{Binding CostCenterId}" Width="*"/>
                                <DataGridTextColumn Header="البيان" Binding="{Binding Statement}" Width="2*"/>
                                <DataGridTextColumn Header="مدين" Binding="{Binding DebitAmount, StringFormat=N2}" Width="*"/>
                                <DataGridTextColumn Header="دائن" Binding="{Binding CreditAmount, StringFormat=N2}" Width="*"/>

                                <DataGridTemplateColumn Header="العملة" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.Currencies, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                              SelectedValue="{Binding CurrencyId}"
                              DisplayMemberPath="CurrencyCode"
                              SelectedValuePath="CurrencyId"
                              Height="30"
                              VerticalContentAlignment="Center"
                              IsEnabled="{Binding AccountNumber, Converter={StaticResource IsNotTotalRowConverter}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="سعر الصرف" Binding="{Binding ExchangeRate, StringFormat=N4}" Width="*"/>
                            </DataGrid.Columns>

                            <!-- تنسيق الصفوف -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Style.Triggers>
                                        <!-- سطر الإجمالي -->
                                        <DataTrigger Binding="{Binding AccountNumber}" Value="الإجمالي">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Background" Value="#f8f9fa"/>
                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                            <!-- يمنع التفاعل -->
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                        </DataGrid>

                    </StackPanel>

                    <!-- ملخص القيد -->
                    <StackPanel Visibility="{Binding ShowSummary, Converter={StaticResource BoolToVisibility}}">
                        <ui:TextBlock Text="ملخص القيد" FontWeight="Bold" FontSize="18" Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- إجمالي المدين -->
                            <ui:TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"
             Text="{Binding TotalDebitDisplay}"
              Background="#e9ecef"
              Padding="8"
              FontWeight="Bold"/>

                            <!-- إجمالي الدائن -->
                            <ui:TextBlock Grid.Row="1" Grid.Column="2" Margin="0,0,0,10"
             Text="{Binding TotalCreditDisplay}"

              Background="#e9ecef"
              Padding="8"
              FontWeight="Bold"/>

                            <!-- الفرق -->
                            <ui:TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,0,10"
              Text="{Binding Difference}"
              Background="{Binding DifferenceBackground}"
              Padding="8"
              FontWeight="Bold"/>

                            <!-- المستخدم -->
                            <ui:TextBlock Text="أدخل بواسطة:" Grid.Row="2" Grid.Column="2" Margin="0,0,0,5"/>
                            <ui:TextBox Grid.Row="3" Grid.Column="2" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.CreatedBy}"
                                        IsReadOnly="True" Background="#e9ecef"/>

                            <!-- تاريخ الإدخال -->
                            <ui:TextBlock Text="تاريخ الإدخال:" Grid.Row="4" Grid.Column="0" Margin="0,0,0,5"/>
                            <ui:TextBox Grid.Row="5" Grid.Column="0" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.CreatedAt, StringFormat=dd/MM/yyyy HH:mm}"
                                        IsReadOnly="True" Background="#e9ecef"/>

                            <!-- تاريخ التعديل -->
                            <ui:TextBlock Text="تاريخ التعديل:" Grid.Row="4" Grid.Column="2" Margin="0,0,0,5"/>
                            <ui:TextBox Grid.Row="5" Grid.Column="2" Margin="0,0,0,10"
                                        Text="{Binding JournalEntry.ModifiedAt, StringFormat=dd/MM/yyyy HH:mm}"
                                        IsReadOnly="True" Background="#e9ecef"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </ui:Card>

        <!-- أزرار الحفظ والإلغاء -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="حفظ القيد" Command="{Binding SaveCommand}" 
                       Background="#28a745" Foreground="White"/>
            <ui:Button Content="إلغاء" Background="#6c757d" Foreground="White" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>