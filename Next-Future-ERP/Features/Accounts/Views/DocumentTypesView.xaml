<!-- DocumentTypesView.xaml -->
<Page
    x:Class="Next_Future_ERP.Features.Accounts.Views.DocumentTypesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:Next_Future_ERP.Features.Accounts.ViewModels"
    mc:Ignorable="d"
    Title="أنواع المستندات"
    FlowDirection="RightToLeft">
    <Page.DataContext>
        <viewmodels:DocumentTypesViewModel />
    </Page.DataContext>
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        <Style x:Key="RequiredFieldIndicator" TargetType="TextBlock">
            <Setter Property="Text" Value="*"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- عنوان الصفحة -->
        <TextBlock Text="أنواع المستندات" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- مفتاح تفسيري -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="* " Foreground="Red" FontWeight="Bold"/>
                <TextBlock Text="= حقل إجباري" Foreground="Black"/>
            </StackPanel>
        </StackPanel>

        <!-- أزرار العمليات -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="إضافة" Command="{Binding StartAddCommand}" Background="#28a745" Foreground="White"/>
            <Button Content="تعديل" Command="{Binding StartEditCommand}" Background="#ffc107" Foreground="Black"/>
            <Button Content="حذف" Command="{Binding DeleteCommand}" Background="#dc3545" Foreground="White"/>
        </StackPanel>

        <!-- جدول أنواع المستندات -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding DocumentTypes}"
                  SelectedItem="{Binding SelectedDocumentType, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10"
                  RowHeight="35"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="الرمز" Binding="{Binding DocumentCode}" Width="*"/>
                <DataGridTextColumn Header="الاسم بالعربية" Binding="{Binding DocumentNameAr}" Width="2*"/>
                <DataGridTextColumn Header="الاسم بالإنجليزية" Binding="{Binding DocumentNameEn}" Width="2*"/>
                <DataGridTextColumn Header="بادئة التسلسل" Binding="{Binding SequencePrefix}" Width="*"/>
                <DataGridTextColumn Header="وحدة نمطية" Binding="{Binding ModuleId}" Width="*"/>
                <DataGridCheckBoxColumn Header="نشط" Binding="{Binding IsActive}" Width="*"/>
                <DataGridCheckBoxColumn Header="نظام" Binding="{Binding IsSystem}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- نموذج الإدخال -->
        <Border Grid.Row="4"
                Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibility}}"
                Background="#f8f9fa"
                Padding="15"
                CornerRadius="8"
                BorderBrush="#dee2e6"
                BorderThickness="1">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="نموذج نوع المستند" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رمز المستند -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="رمز المستند:" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource RequiredFieldIndicator}"/>
                    </Grid>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"
                             Text="{Binding FormDocumentType.DocumentCode, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- اسم المستند بالعربية -->
                    <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="اسم المستند بالعربية:" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource RequiredFieldIndicator}"/>
                    </Grid>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,10"
                             Text="{Binding FormDocumentType.DocumentNameAr, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- اسم المستند بالإنجليزية -->
                    <TextBlock Text="اسم المستند بالإنجليزية:" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,0,10"
                             Text="{Binding FormDocumentType.DocumentNameEn, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- بادئة التسلسل -->
                    <TextBlock Text="بادئة التسلسل:" Grid.Row="2" Grid.Column="2" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Grid.Column="2" Margin="0,0,0,10"
                             Text="{Binding FormDocumentType.SequencePrefix, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- وحدة نمطية -->
                    <TextBlock Text="وحدة نمطية:" Grid.Row="4" Grid.Column="0" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="5" Grid.Column="0" Margin="0,0,0,10"
                             Text="{Binding FormDocumentType.ModuleId, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- الحالة -->
                    <CheckBox Grid.Row="4" Grid.Column="2"
                              IsChecked="{Binding FormDocumentType.IsActive}"
                              Content="نشط"/>

                    <!-- نوع النظام -->
                    <CheckBox Grid.Row="5" Grid.Column="0"
                              IsChecked="{Binding FormDocumentType.IsSystem}"
                              Content="نوع نظام"
                              IsEnabled="False"/>
                </Grid>

                <!-- أزرار النموذج -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="حفظ" Command="{Binding SaveCommand}" Background="#28a745" Foreground="White"/>
                    <Button Content="إلغاء" Command="{Binding CancelCommand}" Background="#6c757d" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>