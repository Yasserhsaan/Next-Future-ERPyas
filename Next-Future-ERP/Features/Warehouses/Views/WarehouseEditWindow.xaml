<ui:FluentWindow
    x:Class="Next_Future_ERP.Features.Warehouses.Views.WarehouseEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    mc:Ignorable="d"
    Title="{Binding WindowTitle}"
    Height="600" Width="900"
    FlowDirection="RightToLeft"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResizeWithGrip"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    FontSize="14"
    Loaded="Window_Loaded">

    <!-- موارد بسيطة وآمنة -->
    <ui:FluentWindow.Resources>
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- أيقونات MDL2 -->
        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="بيانات المستودع"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True" />

        <!-- شريط علوي -->
        <controls:Card Grid.Row="1" Padding="12" Margin="0,0,0,12">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Padding="14,10" Command="{Binding SaveCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" Text="&#xE74E;"/>
                            <!-- Save -->
                            <TextBlock Text="حفظ" FontSize="15"/>
                        </StackPanel>
                    </Button>
                    <Button Padding="14,10" Margin="8,0,0,0" Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource IconText}" Text="&#xE711;"/>
                            <!-- Cancel -->
                            <TextBlock Text="إلغاء" FontSize="15"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </controls:Card>

        <!-- المحتوى الرئيسي -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TabControl>
                <!-- تبويب المعلومات العامة -->
                <TabItem Header="المعلومات العامة">
                    <controls:Card Margin="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- الكود -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="الكود" Style="{StaticResource Label}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding Model.WarehouseCode, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12"/>

                            <!-- الاسم -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="الاسم" Style="{StaticResource Label}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding Model.WarehouseName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12"/>

                            <!-- الموقع -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="الموقع" Style="{StaticResource Label}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding Model.Location, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12"/>

                            <!-- نوع المستودع -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="نوع المستودع" Style="{StaticResource Label}"/>
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      ItemsSource="{Binding WarehouseTypes}"
                                      SelectedItem="{Binding Model.WarehouseType, Mode=TwoWay}"
                                      Margin="0,0,0,12"/>
                        </Grid>
                    </controls:Card>
                </TabItem>

                <!-- تبويب الإدارة والربط -->
                <TabItem Header="الإدارة والربط">
                    <controls:Card Margin="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- الشركة -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="الشركة" Style="{StaticResource Label}"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding Companies}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Model.CompanyId, Mode=TwoWay}"
                                      Margin="0,0,0,12"/>

                            <!-- الفرع -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="الفرع" Style="{StaticResource Label}"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding Branches}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Model.BranshId, Mode=TwoWay}"
                                      Margin="0,0,0,12"/>

                            <!-- المدير -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="المدير" Style="{StaticResource Label}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding Model.ManagerID, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,12"/>
                        </Grid>
                    </controls:Card>
                </TabItem>

                <!-- تبويب الإعدادات -->
                <TabItem Header="الإعدادات">
                    <controls:Card Margin="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- السماح بمخزون سالب -->
                            <CheckBox Grid.Row="0" Grid.Column="1" 
                                      IsChecked="{Binding Model.AllowNegativeStock, Mode=TwoWay}" 
                                      Content="السماح بمخزون سالب" VerticalAlignment="Center" Margin="0,0,0,12"/>

                            <!-- استخدام الصناديق -->
                            <CheckBox Grid.Row="1" Grid.Column="1" 
                                      IsChecked="{Binding Model.UseBins, Mode=TwoWay}" 
                                      Content="استخدام الصناديق" VerticalAlignment="Center" Margin="0,0,0,12"/>

                            <!-- افتراضي -->
                            <CheckBox Grid.Row="2" Grid.Column="1" 
                                      IsChecked="{Binding Model.IsDefault, Mode=TwoWay}" 
                                      Content="افتراضي" VerticalAlignment="Center" Margin="0,0,0,12"/>

                            <!-- مفعل -->
                            <CheckBox Grid.Row="3" Grid.Column="1" 
                                      IsChecked="{Binding Model.IsActive, Mode=TwoWay}" 
                                      Content="مفعل" VerticalAlignment="Center" Margin="0,0,0,12"/>
                        </Grid>
                    </controls:Card>
                </TabItem>

                <!-- تبويب الربط المحاسبي -->
                <TabItem Header="الربط المحاسبي">
                    <controls:Card Margin="8" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- مركز التكلفة الافتراضي -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="مركز التكلفة الافتراضي" Style="{StaticResource Label}"/>
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      ItemsSource="{Binding CostCenters}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding Model.DefultCostCenter, Mode=TwoWay}"
                                      Margin="0,0,0,12"/>
                        </Grid>
                    </controls:Card>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
