<!-- SalesSettingsView.xaml -->
<Page
    x:Class="Next_Future_ERP.Features.Sales.Views.SalesSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:Next_Future_ERP.Features.Sales.ViewModels"
    mc:Ignorable="d"
    Title="إعدادات المبيعات"
    FlowDirection="RightToLeft">
    <Page.DataContext>
        <viewmodels:SalesSettingsViewModel />
    </Page.DataContext>
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- عنوان الصفحة -->
        <TextBlock Text="إعدادات المبيعات" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- منطقة المحتوى -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="#f8f9fa" Padding="15" CornerRadius="8" BorderBrush="#dee2e6" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="إعدادات المبيعات" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ترقيم الفواتير -->
                        <TextBlock Text="ترقيم الفواتير:" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"
                                  ItemsSource="{Binding InvoiceNumberingOptions}"
                                  SelectedValue="{Binding SalesSetting.InvoiceNumbering}"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value" />

                        <!-- المندوب الافتراضي -->
                        <TextBlock Text="المندوب الافتراضي:" Grid.Row="0" Grid.Column="2" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,10"
                                 Text="{Binding SalesSetting.DefaultSalesRep}"/>

                        <!-- معدل الضريبة الافتراضي -->
                        <TextBlock Text="معدل الضريبة الافتراضي (%):" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" Margin="0,0,0,10"
                                 Text="{Binding SalesSetting.DefaultTaxRate}"/>

                       
                        <!-- السماح بالخصم -->
                        <CheckBox Grid.Row="4" Grid.Column="0"
                                  IsChecked="{Binding SalesSetting.AllowDiscount}"
                                  Content="السماح بالخصم"/>

                        <!-- الحد الأقصى للخصم -->
                        <TextBlock Text="الحد الأقصى للخصم (%):" Grid.Row="5" Grid.Column="0" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="6" Grid.Column="0" Margin="0,0,0,10"
                                 Text="{Binding SalesSetting.MaxDiscount}"/>

                        <!-- النشر التلقائي للفاتورة -->
                        <CheckBox Grid.Row="4" Grid.Column="2"
                                  IsChecked="{Binding SalesSetting.AutoPostInvoice}"
                                  Content="النشر التلقائي للفاتورة"/>

                        <!-- تفعيل نقطة البيع -->
                        <CheckBox Grid.Row="7" Grid.Column="0"
                                  IsChecked="{Binding SalesSetting.PosEnabled}"
                                  Content="تفعيل نقطة البيع"/>

                        <!-- الطباعة التلقائية لنقطة البيع -->
                        <CheckBox Grid.Row="7" Grid.Column="2"
                                  IsChecked="{Binding SalesSetting.PosAutoPrint}"
                                  Content="الطباعة التلقائية لنقطة البيع"/>

                        <!-- طرق الدفع لنقطة البيع -->
                        <TextBlock Text="طرق الدفع لنقطة البيع:" Grid.Row="8" Grid.Column="0" Margin="0,0,0,5"/>
                        <TextBlock Text="طرق الدفع لنقطة البيع:" Grid.Row="8" Grid.Column="0" Margin="0,0,0,5"/>
                        <ComboBox Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10"
          ItemsSource="{Binding PaymentMethods}"
          SelectedValue="{Binding SalesSetting.PosPaymentMethods}"
          IsEditable="True"
          Text="{Binding SalesSetting.PosPaymentMethods}" />
                       
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- أزرار الحفظ وإعادة التعيين -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="حفظ الإعدادات" Command="{Binding SaveCommand}" Background="#28a745" Foreground="White"/>
            <Button Content="إعادة التعيين" Command="{Binding ResetCommand}" Background="#dc3545" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>