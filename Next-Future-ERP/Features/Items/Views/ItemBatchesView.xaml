<UserControl x:Class="Next_Future_ERP.Features.Items.Views.ItemBatchesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style TargetType="DataGridCell">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontSize" Value="13.5"/>
                <Setter Property="Padding" Value="6,2,6,2"/>
            </Style>
            <Style TargetType="DataGridRow">
                <Setter Property="FontSize" Value="13.5"/>
            </Style>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#111827"/>
                <Setter Property="Background" Value="#F3F4F6"/>
                <Setter Property="Padding" Value="8,6"/>
            </Style>
            <Style x:Key="CenterCell" TargetType="DataGridCell">
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="RightCell" TargetType="DataGridCell">
                <Setter Property="TextBlock.TextAlignment" Value="Right"/>
                <Setter Property="HorizontalContentAlignment" Value="Right"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="جديد" Margin="0,0,8,0" Width="90" Command="{Binding NewCommand}"/>
            <Button Content="حفظ" Margin="0,0,8,0" Width="90" Command="{Binding SaveCommand}"/>
            <Button Content="تحديث" Width="90" Command="{Binding LoadCommand}"/>
        </StackPanel>

        <!-- نموذج مبسط -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

      <StackPanel Margin="6">
          <TextBlock Text="رقم الدفعة" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <TextBox Text="{Binding Edit.BatchNumber, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Column="1">
          <TextBlock Text="الرقم التسلسلي" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <TextBox Text="{Binding Edit.SerialNumber, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Column="2">
          <TextBlock Text="تاريخ الإنتاج" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <DatePicker SelectedDate="{Binding Edit.ProductionDate, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Column="3">
          <TextBlock Text="تاريخ الانتهاء" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <DatePicker SelectedDate="{Binding Edit.ExpiryDate, Mode=TwoWay}"/>
      </StackPanel>

      <StackPanel Margin="6" Grid.Row="1">
          <TextBlock Text="اللون" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <TextBox Text="{Binding Edit.Color, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Row="1" Grid.Column="1">
          <TextBlock Text="الحجم" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <TextBox Text="{Binding Edit.Size, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Row="1" Grid.Column="2">
          <TextBlock Text="الموقع بالمخزن" Foreground="#111827" FontWeight="SemiBold" Margin="0,0,0,4"/>
          <TextBox Text="{Binding Edit.LocationInWarehouse, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Margin="6" Grid.Row="1" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
          <TextBlock Text="الحالة: " VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#111827" FontWeight="SemiBold"/>
          <ComboBox Width="140" SelectedValue="{Binding Edit.BatchStatus, Mode=TwoWay}" SelectedValuePath="Tag">
              <ComboBoxItem Content="نشطة" Tag="A"/>
              <ComboBoxItem Content="مغلقة" Tag="C"/>
              <ComboBoxItem Content="محجوزة" Tag="R"/>
          </ComboBox>
      </StackPanel>
        </Grid>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Batches}" AutoGenerateColumns="False" CanUserAddRows="False" SelectedItem="{Binding Edit}"
                  AlternationCount="2" AlternatingRowBackground="#FAFAFA" BorderBrush="#E2E8F0" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding BatchID}" Width="60" IsReadOnly="True" CellStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="رقم الدفعة" Binding="{Binding BatchNumber}" Width="*"/>
                <DataGridTextColumn Header="Serial" Binding="{Binding SerialNumber}" Width="150"/>
                <DataGridTextColumn Header="إنتاج" Binding="{Binding ProductionDate, StringFormat=yyyy-MM-dd}" Width="120" CellStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="انتهاء" Binding="{Binding ExpiryDate, StringFormat=yyyy-MM-dd}" Width="120" CellStyle="{StaticResource CenterCell}"/>
                <DataGridTextColumn Header="لون" Binding="{Binding Color}" Width="100"/>
                <DataGridTextColumn Header="حجم" Binding="{Binding Size}" Width="100"/>
                <DataGridTextColumn Header="موقع" Binding="{Binding LocationInWarehouse}" Width="150"/>
                <DataGridTextColumn Header="كمية" Binding="{Binding CurrentQuantity, StringFormat=F4}" Width="100" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="محجوز" Binding="{Binding ReservedQuantity, StringFormat=F4}" Width="100" CellStyle="{StaticResource RightCell}"/>
                <DataGridTemplateColumn Header="حالة" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Padding="6,2" CornerRadius="12" HorizontalAlignment="Center">
                                <TextBlock FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=""/>
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding BatchStatus}" Value="A">
                                                    <Setter Property="Text" Value="نشطة"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding BatchStatus}" Value="C">
                                                    <Setter Property="Text" Value="مغلقة"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding BatchStatus}" Value="R">
                                                    <Setter Property="Text" Value="محجوزة"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="مفعل" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTemplateColumn Header="حذف" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="حذف" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>


