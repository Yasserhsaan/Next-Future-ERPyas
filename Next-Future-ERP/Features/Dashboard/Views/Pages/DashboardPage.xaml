<Page x:Class="Next_Future_ERP.Features.Dashboard.Views.Pages.DashboardPage"  
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
      xmlns:local="clr-namespace:Next_Future_ERP.Features.Dashboard.ViewModels"  
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      mc:Ignorable="d"  
      xmlns:vm="clr-namespace:Next_Future_ERP.Features.Dashboard.ViewModels"  
      Foreground="{Binding TextFillColorPrimaryBrush}"  
      FlowDirection="RightToLeft"  
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">  

    <Page.DataContext>  
        <vm:DashboardViewModel />  
    </Page.DataContext>  

    <Grid>  
        <Grid.RowDefinitions>  
            <RowDefinition Height="*" />  
            <RowDefinition Height="Auto" />  
        </Grid.RowDefinitions>  

        <StackPanel Margin="0,0,0,24">  
            <ui:Card Margin="0,36,0,0">  
                <ui:DataGrid  
                    AllowDrop="True"  
                    x:Name="UsersDataGrid"  
                    ButtonBase.Click="UsersDataGrid_Click"  
                    ItemsSource="{Binding Users}" AutoGenerateColumns="False" IsReadOnly="True">  
                    <ui:DataGrid.Columns>  
                        <DataGridTextColumn Header="رقم" Binding="{Binding ID}" Width="Auto" />  
                        <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="Auto" />  
                        <DataGridTextColumn Header="الايميل" Binding="{Binding Email}" Width="Auto" />  
                    </ui:DataGrid.Columns>  
                </ui:DataGrid>  
                <!-- Pagination Controls -->  

            </ui:Card>  
            <!-- Advanced Pagination -->  
            <StackPanel Grid.Row="23" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">  

                <Button Content="Prev" Command="{Binding PreviousPageCommand}" Margin="3" />  

                <Button Content="Next >" Command="{Binding NextPageCommand}" />  

            </StackPanel>  
        </StackPanel>  

    </Grid>  
</Page>
