<ui:FluentWindow x:Class="Next_Future_ERP.Features.Dashboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Next_Future_ERP.Features.Dashboard.ViewModels"
        xmlns:models="clr-namespace:Next_Future_ERP.Features.Dashboard.Models"
        xmlns:local="clr-namespace:Next_Future_ERP.Features.Dashboard.Views"
        mc:Ignorable="d"
        Title="Next Future ERP"
         Width="1450"  
         Height="802"  
         MinWidth="900"  
         d:DesignHeight="650"  
         d:DesignWidth="1000"  
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        FlowDirection="RightToLeft"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Default"

        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ui:Design.Background="#F5F5F5"
        ui:Design.Foreground="#333333"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowModel, IsDesignTimeCreatable=True}">

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- NullToVisibilityConverter -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- CountToVisibilityConverter -->
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <!-- Design-time data context for better design-time experience -->
        <vm:MainWindowModel x:Key="DesignTimeViewModel" d:IsDataSource="True"/>

        <!-- ستايل عنصر القائمة بتصميم WPF-UI -->
        <Style x:Key="ModernMenuItemStyle" TargetType="ui:NavigationViewItem">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FlowDirection" Value="RightToLeft"/>
        </Style>
        
        <!-- قالب عنصر القائمة -->
        <HierarchicalDataTemplate x:Key="MenuItemTemplate" ItemsSource="{Binding Children}">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- الأيقونة -->
                <Path Grid.Column="0" 
                      Data="{Binding Icon}" 
                      Width="18" 
                      Height="18" 
                      Fill="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(TextElement.Foreground)}"
                      Stretch="Uniform" 
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"/>
                
                <!-- النص -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding Title}" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           TextAlignment="Right">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </HierarchicalDataTemplate>
        <!-- ألوان شبيهة بـ SAP ByDesign -->
        <SolidColorBrush x:Key="SapAccent" Color="#0A6ED1"/>
        <!-- أزرق -->
        <SolidColorBrush x:Key="TabBg"     Color="#FFFFFF"/>
        <!-- أبيض -->
        <SolidColorBrush x:Key="TabBgIdle" Color="#F3F4F6"/>
        <!-- رمادي فاتح -->
        <SolidColorBrush x:Key="TabBorder" Color="#E0E0E0"/>
        <!-- حدود خفيفة -->
        <SolidColorBrush x:Key="TabText"   Color="#2B2F33"/>
        <!-- نص افتراضي -->
        <SolidColorBrush x:Key="TabTextSel" Color="#0A6ED1"/>
        <!-- نص محدد -->
        <!-- تبويب: الهيدر بنمط نظيف -->
        <DataTemplate x:Key="TabHeaderTemplate">
                <Border x:Name="Container"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1,1,1,0"
                    Padding="16,8,12,8"
                    Margin="2,0,2,0"
                    CornerRadius="4,4,0,0"
                        SnapsToDevicePixels="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                    <!-- أيقونة -->
                    <Path x:Name="TabIcon" 
                          Grid.Column="0"
                          Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                          Fill="#666666"
                          Width="14" 
                          Height="14"
                          Stretch="Uniform"
                          Margin="0,0,8,0"
                          VerticalAlignment="Center"/>

                        <!-- العنوان -->
                        <TextBlock x:Name="TitleText"
                               Grid.Column="1"
                                   Text="{Binding Title}"
                                   FontSize="13"
                                   FontWeight="Normal"
                               Foreground="#333333"
                                   VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               TextAlignment="Right"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,8,0"/>

                    <!-- زر الإغلاق -->
                        <Button x:Name="CloseBtn"
                            Grid.Column="2"
                            Width="18" 
                            Height="18"
                            Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                            ToolTip="إغلاق"
                            Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}"
                            CommandParameter="{Binding}"
                            Visibility="Collapsed">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="2"
                                        Padding="2">
                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                                          Fill="#666666" 
                                          Width="10" 
                                          Height="10"
                                          Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                    </Button>
                    </Grid>
            </Border>

            <!-- سلوكيات الاختيار/الهوفر -->
            <DataTemplate.Triggers>
                <!-- مظهر التبويب المختار -->
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter TargetName="Container" Property="Background" Value="White"/>
                    <Setter TargetName="Container" Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter TargetName="Container" Property="BorderThickness" Value="1,2,1,0"/>
                    <Setter TargetName="TitleText" Property="Foreground" Value="{StaticResource SapAccent}"/>
                    <Setter TargetName="TitleText" Property="FontWeight" Value="SemiBold"/>
                    <Setter TargetName="TabIcon" Property="Fill" Value="{StaticResource SapAccent}"/>
                    <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                </DataTrigger>

                <!-- هوفر (عندما لا يكون محدد) -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsSelected}" Value="False"/>
                        <Condition Binding="{Binding ElementName=Container, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="Container" Property="Background" Value="#EEEEEE"/>
                    <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <!-- ستايل عنصر التبويب (الهيدر قابل للنقر للتبديل) -->
        <Style x:Key="TabHeaderItemStyle" TargetType="ContentPresenter">
            <EventSetter Event="MouseLeftButtonUp" Handler="TabHeader_MouseLeftButtonUp"/>
        </Style>

    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MaxWidth="900"  />
            <ColumnDefinition Width="*" />
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                <Setter Property="Width" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- الشريط العلوي -->
        <ui:TitleBar Grid.Row="0" Grid.ColumnSpan="2" 
                     Title="Next Future ERP"
                     Icon="/Assets/logo/logo.png"
                     Background="{StaticResource SapAccent}"
                     Foreground="White"
                     Height="48"
                     d:Background="#0A6ED1"
                     d:Foreground="White">
            <ui:TitleBar.Header>
                <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                    <!-- زر القائمة والشعار -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:Button Appearance="Transparent" 
                                   Icon="{ui:SymbolIcon Navigation24}" 
                                   Command="{Binding ToggleMenuCollapseCommand}"
                                   ToolTip="فتح/إغلاق القائمة"
                                   Foreground="White"
                                   Margin="8,0"/>
                </StackPanel>

                <!-- معلومات المستخدم والشاشة المختارة --><!--
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    --><!-- اسم الشاشة المختارة --><!--
                        <Border Background="#FFFFFF20" 
                                CornerRadius="4" 
                                Padding="10,6"
                                Margin="0,0,12,0"
                            Visibility="{Binding SelectedTab, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding SelectedTab.Title}" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           TextAlignment="Right"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,0,8,0"/>
                                
                                <ui:Button Grid.Column="1" 
                                           Appearance="Transparent"
                                           Icon="{ui:SymbolIcon Dismiss20}"
                                    Command="{Binding CloseTabCommand}" 
                                    CommandParameter="{Binding SelectedTab}"
                                           Foreground="White"
                                           FontSize="10"
                                           Width="20"
                                           Height="20"
                                           Padding="2">
                                    <ui:Button.Resources>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#40FFFFFF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Resources>
                                </ui:Button>
                        </Grid>
                    </Border>
                    
                    --><!-- معلومات المستخدم --><!--
                    <TextBlock Text="{Binding CurrentUserName}" FontWeight="SemiBold" 
                                   Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" TextAlignment="Right"/>
                        <TextBlock Text="|" Margin="2,0" Foreground="White" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" TextAlignment="Right"/>
                        <TextBlock Text="{Binding CurrentUserInfo}" Foreground="#E0F2FF" VerticalAlignment="Center"
                                   HorizontalAlignment="Right" TextAlignment="Right"/>
                </StackPanel>-->

                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- زر البحث -->
                        <ui:Button Appearance="Transparent" 
                                   Icon="{ui:SymbolIcon Search24}" 
                                   ToolTip="بحث"
                                   Foreground="White"
                                   Margin="4,0"/>

                        <!-- زر المساعدة -->
                        <ui:Button Appearance="Transparent" 
                                   Icon="{ui:SymbolIcon QuestionCircle24}" 
                                   ToolTip="مساعدة"
                                   Foreground="White"
                                   Margin="4,0"/>

                        <!-- زر البروفايل -->
                        <ui:Button Appearance="Transparent" 
                                   Icon="{ui:SymbolIcon Person24}" 
                                   ToolTip="البروفايل"
                                   Foreground="White"
                                   Margin="4,0"/>
                    </StackPanel>
            </Grid>
            </ui:TitleBar.Header>
        </ui:TitleBar>


        <!-- العمود الأيمن: قائمة التنقل -->
        <Border Grid.Row="1" Grid.Column="0" 
         Background="#FCFCFC"
         Margin="8,0,8,8"
         CornerRadius="4"
         BorderBrush="#D5D5D5"
         HorizontalAlignment="Right"
         BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                           Opacity="0.1" 
                           BlurRadius="8" 
                           ShadowDepth="2" 
                           Direction="290"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- عنوان القائمة مع زر التبديل -->
                <Border Grid.Row="0" 
                 Background="#FAFAFA" 
                 BorderBrush="#DDDDDD" 
                 BorderThickness="0,0,0,1" 
                 Padding="14,12"
                 CornerRadius="4,4,0,0">
                    <Grid HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- عنوان القائمة -->
                        <TextBlock Grid.Column="0" 
                            Text="القائمة الرئيسية" 
                            FontWeight="SemiBold" 
                            FontSize="14" 
                            Foreground="#404040"
                            VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuCollapsed}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- زر التبديل -->
                        <!--
                 <Button Grid.Column="1" 
                         Width="24" 
                         Height="24"
                         Background="Transparent" 
                         BorderThickness="0" 
                         Cursor="Hand" 
                         ToolTip="إخفاء/إظهار النصوص"
                         Command="{Binding ToggleMenuCollapseCommand}">
                     <Path Data="M9,5L15,12L9,19" 
                           Fill="#666666" 
                           Width="12" 
                           Height="12"
                           Stretch="Uniform"/>
                 </Button>-->
                    </Grid>
                </Border>

                <!-- محتوى القائمة بتصميم WPF-UI Modern -->
                <ScrollViewer Grid.Row="1" 
                       VerticalScrollBarVisibility="Auto" 
                       Background="Transparent">
                    <ItemsControl ItemsSource="{Binding Menu}"
                           Margin="4,1" HorizontalAlignment="Right">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Menu Item Container -->
                                <StackPanel Margin="0,2" 
                                            Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <!-- Parent Item -->
                                    <Border x:Name="MenuBorder"
                                     Background="Transparent"
                                     CornerRadius="6"
                                     Margin="4,2"
                                     Cursor="Hand"
                                            HorizontalAlignment="Left"
                                     MouseLeftButtonUp="MenuBorder_Click"
                                     Tag="{Binding}">
                                        <Grid Margin="12,4" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon with better styling -->
                                            <Border x:Name="IconBorder"
                                                    Grid.Column="0"
                                                    Background="Transparent"
                                                    Width="32"
                                                    Height="32"
                                                    CornerRadius="6"
                                                    Margin="0,0,12,0">
                                                <Path x:Name="IconPath"
                                                      Data="{Binding Icon}" 
                                                      Width="18" 
                                                      Height="18" 
                                                      Fill="#707070"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Title -->
                                            <TextBlock x:Name="TitleText"
                                                       Grid.Column="1" 
                                                       Text="{Binding Title}" 
                                                       FontSize="13"
                                                       FontWeight="Normal"
                                                       Foreground="#505050"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextAlignment="Right">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Expand Icon (if has children) - with rotation -->
                                            <Border Grid.Column="2"
                       Background="Transparent" 
                                             CornerRadius="4"
                                             Padding="4"
                                             HorizontalAlignment="Right"
                                             Visibility="{Binding Children.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                             RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <RotateTransform Angle="0"/>
                                                </Border.RenderTransform>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                                                <Setter Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <RotateTransform Angle="-90"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Path Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                                               Width="12" 
                                               Height="12"
                                               Fill="#909090"
                                               Stretch="Uniform"/>
                                            </Border>
                                        </Grid>

                                        <!-- Border Style Triggers -->
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                <Style.Triggers>
                                                    <!-- Selected State -->
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                                    </DataTrigger>
                                                    <!-- Hover State -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                    <!-- Selected + Hover State -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsSelected}" Value="True"/>
                                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#BBDEFB"/>
                                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Children Items - Collapsible -->
                                    <ItemsControl ItemsSource="{Binding Children}"
                                           Margin="24,0,0,4" HorizontalAlignment="Left">
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="ChildBorder"
                                                 Background="Transparent"
                                                 CornerRadius="6"
                                                 Margin="2,0"
                                                 Cursor="Hand"
                                                        HorizontalAlignment="Left"
                                                 MouseLeftButtonUp="MenuBorder_Click"
                                                 Tag="{Binding}"
                                                        Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Grid Margin="1,4,24,0" >
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Child Icon -->
                                                        <Border x:Name="ChildIconBorder"
                                                                Grid.Column="0"
                                                                Background="Transparent"
                                                                Width="24"
                                                                Height="24"
                                                                CornerRadius="5"
                                                                Margin="0,0,10,0">
                                                            <Path x:Name="ChildIconPath"
                                                                  Data="{Binding Icon}" 
                                                                  Width="16" 
                                                                  Height="16" 
                                                                  Fill="#808080"
                                                                  Stretch="Uniform"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>

                                                        <TextBlock x:Name="ChildTitleText"
                                                                   Grid.Column="1" 
                                                                   Text="{Binding Title}" 
                                                                   FontSize="12" 
                                                                   Foreground="#606060"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Right"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   TextAlignment="Right">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding DataContext.IsMenuCollapsed, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>

                                                    <!-- Child Border Style -->
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0,0,3,0"/>
                                                            <Style.Triggers>
                                                                <!-- Selected State -->
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter Property="Background" Value="#E1F5FE"/>
                                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                </DataTrigger>
                                                                <!-- Hover State -->
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                                </Trigger>
                                                                <!-- Selected + Hover State -->
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Background" Value="#B3E5FC"/>
                                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                                
                                                <!-- Data Template Triggers for Child Item Icon and Text -->
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter TargetName="ChildIconBorder" Property="Background" Value="#2196F3"/>
                                                        <Setter TargetName="ChildIconPath" Property="Fill" Value="White"/>
                                                        <Setter TargetName="ChildTitleText" Property="Foreground" Value="#1976D2"/>
                                                        <Setter TargetName="ChildTitleText" Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                
                                <!-- Data Template Triggers for Parent Item Icon and Text -->
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="IconBorder" Property="Background" Value="#1976D2"/>
                                        <Setter TargetName="IconPath" Property="Fill" Value="White"/>
                                        <Setter TargetName="TitleText" Property="Foreground" Value="#1565C0"/>
                                        <Setter TargetName="TitleText" Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        <!-- منطقة التبويبات + المحتوى -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- شريط رؤوس التبويبات -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,0,1"
                    Padding="8,0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Height="40">
                    <ItemsControl ItemsSource="{Binding OpenTabs}" 
                                  ItemTemplate="{StaticResource TabHeaderTemplate}"
                              ItemContainerStyle="{StaticResource TabHeaderItemStyle}"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- منطقة عرض محتوى التبويب المحدّد -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Margin="8"
                    CornerRadius="4"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      Opacity="0.1" 
                                      BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Direction="270"/>
                </Border.Effect>
                <ContentPresenter Content="{Binding SelectedTab.Content}"
                                  Margin="0"
                                  HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"/>
            </Border>
        </Grid>

       
    </Grid>
</ui:FluentWindow>
