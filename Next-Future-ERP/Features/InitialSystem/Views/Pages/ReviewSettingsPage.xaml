<UserControl x:Class="Next_Future_ERP.Features.InitialSystem.Views.Pages.ReviewSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
              xmlns:controls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"  
             xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"  
             xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"  
             xmlns:vm="clr-namespace:Next_Future_ERP.Features.InitialSystem.ViewModels"  
             ui:Design.Background="{Binding ApplicationBackgroundBrush}"  
             ui:Design.Foreground="{Binding TextFillColorPrimaryBrush}"  
              xmlns:conv="clr-namespace:Next_Future_ERP.Core.Converter"
              FlowDirection="RightToLeft"
             >

 
    <UserControl.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <conv:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Header -->
            <ui:Card Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="مراجعة الإعدادات" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="يرجى مراجعة جميع الإعدادات قبل الحفظ النهائي"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </ui:Card>

            <!-- Connection Settings -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="إعدادات الاتصال" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="نوع الاتصال:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WizardState.SelectedConnectionType}" Grid.Row="0" Grid.Column="1"/>
                        
                        <TextBlock Text="خادم قاعدة البيانات:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WizardState.DatabaseConnection.ServerName}" Grid.Row="1" Grid.Column="1"/>
                        
                        <TextBlock Text="اسم قاعدة البيانات:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WizardState.DatabaseConnection.DatabaseName}" Grid.Row="2" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Company Information -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="معلومات الشركة" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="اسم الشركة:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold"  
                       Visibility="{Binding WizardState.CompanyInfo.CompName, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.CompanyInfo.CompName}"
                       Grid.Row="0" Grid.Column="1" 
                       Visibility="{Binding WizardState.CompanyInfo.CompName, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <TextBlock Text="العملة:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold"
                       Visibility="{Binding WizardState.CompanyInfo.Currency, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.CompanyInfo.Currency}" 
                       Grid.Row="1" Grid.Column="1"
                       Visibility="{Binding WizardState.CompanyInfo.Currency, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <TextBlock Text="اللغة:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold"
                       Visibility="{Binding WizardState.CompanyInfo.Language, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.CompanyInfo.Language}" 
                       Grid.Row="2" Grid.Column="1"
                       Visibility="{Binding WizardState.CompanyInfo.Language, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <TextBlock Text="استخدام الضريبة:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold"
                       />
                        <TextBlock Text="{Binding WizardState.CompanyInfo.UseVat, Converter={StaticResource BoolToYesNoConverter}}" 
                       Grid.Row="3" Grid.Column="1"
                       />

                        <TextBlock Text="دعم التقويم الهجري:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold"
                       />
                        <TextBlock Text="{Binding WizardState.CompanyInfo.HijriSupport, Converter={StaticResource BoolToYesNoConverter}}" 
                       Grid.Row="4" Grid.Column="1"
                       />
                    </Grid>
                </StackPanel>
            </ui:Card>


            <!-- Branch Information -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="معلومات الفرع" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Branch Name -->
                        <TextBlock Text="اسم الفرع:" 
                       Grid.Row="0" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.Branches.BranchName, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.Branches.BranchName}" 
                       Grid.Row="0" Grid.Column="1"
                       Visibility="{Binding WizardState.Branches.BranchName, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Address -->
                        <TextBlock Text="العنوان:" 
                       Grid.Row="1" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.Branches.Location, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.Branches.Location}" 
                       Grid.Row="1" Grid.Column="1"
                       Visibility="{Binding WizardState.Branches.Location, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </ui:Card>


            <!-- Accounting Setup -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="الإعدادات المحاسبية" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Default Cash Account -->
                        <TextBlock Text="الحساب النقدي الافتراضي:" 
                       Grid.Row="0" Grid.Column="0" 
                       FontWeight="SemiBold"
                      />
                        <TextBlock Text="{Binding WizardState.AccountingSetup.DefaultCashAccount}" 
                       Grid.Row="0" Grid.Column="1"
                      />

                        <!-- Default Bank Account -->
                        <TextBlock Text="الحساب البنكي الافتراضي:" 
                       Grid.Row="1" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AccountingSetup.DefaultBankAccount, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AccountingSetup.DefaultBankAccount}" 
                       Grid.Row="1" Grid.Column="1"
                      />

                        <!-- Default Inventory Account -->
                        <TextBlock Text="حساب المخزون الافتراضي:" 
                       Grid.Row="2" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AccountingSetup.DefaultInventoryAccount, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AccountingSetup.DefaultInventoryAccount}" 
                       Grid.Row="2" Grid.Column="1"
                       Visibility="{Binding WizardState.AccountingSetup.DefaultInventoryAccount, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Auto Posting -->
                        <TextBlock Text="الترحيل التلقائي:" 
                       Grid.Row="3" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AccountingSetup.AutoPosting, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AccountingSetup.AutoPosting}" 
                       Grid.Row="3" Grid.Column="1"
                       Visibility="{Binding WizardState.AccountingSetup.AutoPosting, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </ui:Card>


            <!-- Financial Periods -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="الفترات المالية" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Fiscal Year -->
                        <TextBlock Text="السنة المالية:" 
                       Grid.Row="0" Grid.Column="0" 
                       FontWeight="SemiBold"
                       />
                        <TextBlock Text="{Binding WizardState.CompanyInfo.FiscalYearStart}" 
                       Grid.Row="0" Grid.Column="1"
                       Visibility="{Binding WizardState.CompanyInfo.FiscalYearStart, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Current Month -->
                        <TextBlock Text="الشهر الحالي:" 
                       Grid.Row="1" Grid.Column="0" 
                       FontWeight="SemiBold"
                      />
                        <TextBlock Text="{Binding WizardState.AccountingSetup.CurrentMonth}" 
                       Grid.Row="1" Grid.Column="1"
                     />
                    </Grid>
                </StackPanel>
            </ui:Card>


            <!-- Admin User -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="معلومات المستخدم المدير" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Username -->
                        <TextBlock Text="اسم المستخدم:" 
                       Grid.Row="0" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AdminUser.Name, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AdminUser.Name}" 
                       Grid.Row="0" Grid.Column="1"
                       Visibility="{Binding WizardState.AdminUser.Name, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Full Name -->
                        <TextBlock Text="الاسم الكامل:" 
                       Grid.Row="1" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AdminUser.Fname, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AdminUser.Fname}" 
                       Grid.Row="1" Grid.Column="1"
                       Visibility="{Binding WizardState.AdminUser.Fname, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Email -->
                        <TextBlock Text="البريد الإلكتروني:" 
                       Grid.Row="2" Grid.Column="0" 
                       FontWeight="SemiBold"
                       Visibility="{Binding WizardState.AdminUser.Email, Converter={StaticResource StringToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding WizardState.AdminUser.Email}" 
                       Grid.Row="2" Grid.Column="1"
                       Visibility="{Binding WizardState.AdminUser.Email, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </ui:Card>


            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <!--<ui:Button Content="تعديل الإعدادات" 
                           Icon="Edit24"
                           Margin="0,0,10,0"
                           Command="{Binding EditSettingsCommand}"/>-->
                
                <ui:Button Content="حفظ الإعدادات" 
                           Icon="Save24"
                           Appearance="Primary"
                           Command="{Binding SaveSettingsCommand}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl> 