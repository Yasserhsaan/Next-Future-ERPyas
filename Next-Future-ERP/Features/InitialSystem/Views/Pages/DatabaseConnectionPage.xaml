<UserControl x:Class="Next_Future_ERP.Features.InitialSystem.Views.Pages.DatabaseConnectionPage"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:local="clr-namespace:Next_Future_ERP.Features.InitialSystem.Views.Pages"  
             mc:Ignorable="d"   
             xmlns:controls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"  
             xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"  
             xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"  
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  
             xmlns:vm="clr-namespace:Next_Future_ERP.Features.InitialSystem.ViewModels"  
             ui:Design.Background="{Binding ApplicationBackgroundBrush}"  
             ui:Design.Foreground="{Binding TextFillColorPrimaryBrush}"  
             FlowDirection="RightToLeft"  
             VerticalAlignment="Center"  
             d:DesignHeight="500" d:DesignWidth="900">  

    <UserControl.Resources>  
        <BooleanToVisibilityConverter x:Key="InverseBooleanConverter" />  
    </UserControl.Resources>  

    <!--<UserControl.DataContext>  
        <vm:DatabaseConnectionViewModel />  
    </UserControl.DataContext>-->  

    <Grid>  
        <Border Background="{Binding ControlBackgroundBrush}"  
                CornerRadius="12"  
                Padding="24"  
                BorderBrush="{Binding ControlStrokeBrush}"  
                BorderThickness="1"  
                HorizontalAlignment="Center"  
                VerticalAlignment="Center">  

            <StackPanel Width="400">  
                <ui:TextBlock Text="إعداد الاتصال"  
                              FontSize="20"  
                              FontWeight="Bold"  
                              TextAlignment="Center"  
                              Margin="0,0,0,10" />  

                <StackPanel Margin="0,14,0,0">  
                    <ui:TextBlock Text="أسم السرفر" />  
                    <ui:TextBox Text="{Binding ServerName}" PlaceholderText="أسم السرفر" />  
                </StackPanel>  

                <StackPanel Margin="0,14,0,0">  
                    <ui:TextBlock Text="أسم قاعدة البيانات"  />  
                    <ui:TextBox Text="{Binding DataBaseName}" PlaceholderText="أسم قاعدة البيانات" />  
                </StackPanel>  

                <StackPanel Margin="0,14,0,0">  
                    <ui:TextBlock Text="المصادقة" />  
                    <StackPanel Orientation="Horizontal">  
                        <RadioButton Content="Windows Authentication"  
                                     IsChecked="{Binding UseWindowsAuth}"  
                                     GroupName="AuthMode"  Margin="0,0,12,0"/>  
                        <RadioButton Content="SQL Server Authentication"  
                                     IsChecked="{Binding UseWindowsAuth,Converter={StaticResource InverseBooleanConverter}}"  
                                     GroupName="AuthMode" />  
                    </StackPanel>  
                </StackPanel>  

                <StackPanel Margin="0,14,0,0">  
                    <ui:TextBlock Text="اسم المستخدم" />  
                    <ui:TextBox Text="{Binding Username}"   
                                IsEnabled="{Binding UseWindowsAuth}" PlaceholderText="اسم المستخدم" />  
                </StackPanel>  

                <StackPanel Margin="0,14,0,0">  
                    <ui:TextBlock Text="كلمة السر" />  
                    <ui:PasswordBox   
                                 IsEnabled="{Binding Password}"   
                            PlaceholderEnabled="True"  
                        Password="{Binding Password, Mode=TwoWay}"
                        x:Name="Password"
                            PlaceholderText="كلمة السر..." />  
                </StackPanel>

              


                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,20,0,0">  
                    <ui:Button Content="اختبار الاتصال"  
                               Appearance="Secondary"  
                               Command="{Binding TestConnectionCommand}" />  
                </StackPanel>  
            </StackPanel>  
        </Border>  
    </Grid>  
</UserControl>
