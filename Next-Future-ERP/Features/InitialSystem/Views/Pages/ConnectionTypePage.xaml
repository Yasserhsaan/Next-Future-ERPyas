<UserControl x:Class="Next_Future_ERP.Features.InitialSystem.Views.Pages.ConnectionTypePage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:Next_Future_ERP.Features.InitialSystem.Views.Pages"
     mc:Ignorable="d" 
      xmlns:controls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
     xmlns:i18n="http://schemas.lepo.co/i18n/2022/xaml"
     xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
     xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
     
      ui:Design.Background="{Binding ApplicationBackgroundBrush}"
     ui:Design.Foreground="{Binding TextFillColorPrimaryBrush}"
     FlowDirection="RightToLeft"
    
        VerticalAlignment="Center"
     d:DesignHeight="450" d:DesignWidth="900">

 
    <UserControl.Resources>
        <!-- Define BoolToVisibilityConverter resource -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Center">
        <ui:TextBlock Text="اختر نوع الاتصال"
              FontSize="24"
              FontWeight="Bold"
              HorizontalAlignment="Center"
              Margin="0,0,0,20" />

        <ui:TextBlock Text="حدد نوع الاتصال لقاعدة البيانات الخاصة بك."
              FontSize="14"
              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
              HorizontalAlignment="Center"
              Margin="0,0,0,30" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <!-- Local Card -->
            <ui:CardAction
        Width="220"
        Height="220"
        Command="{Binding CardClickCommand}"
                
        
        CommandParameter="Local"
        IsChevronVisible="False">

                <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Database16" FontSize="32" HorizontalAlignment="Center"/>
                  
                    <ui:TextBlock Text="محلي"
                          FontWeight="Bold"
                          FontSize="16"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Center" />
                    <ui:TextBlock Text="الاتصال بقاعدة بيانات على شبكتك المحلية"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          FontSize="13" />
                </StackPanel>
            </ui:CardAction>

            <!-- Cloud Card -->
            <ui:CardAction
        Width="220"
        Height="220"
        Command="{Binding CardClickCommand}"
        CommandParameter="Server"
              
        IsChevronVisible="False">

                <StackPanel Margin="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Cloud16" FontSize="32" HorizontalAlignment="Center"/>
                   
                    <ui:TextBlock Text="سحابية"
                          FontWeight="Bold"
                          FontSize="16"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Center" />
                    <ui:TextBlock Text="الاتصال بقاعدة بيانات سحابية"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          FontSize="13" />
                </StackPanel>
            </ui:CardAction>
            
        </StackPanel>
    </StackPanel>

</UserControl>
